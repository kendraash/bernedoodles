<div class="show">

  <h2><%= @dog.name%> Due: <%= @litter.due_date.strftime("%B %d, %Y") %> </h2>
  <% if current_user.email == "whinecountrybernedoodles@gmail.com" %>
    <button><%= link_to "Add Puppy", new_dog_litter_puppy_path(@dog, @litter) %></button>
  <% end %>  
  <hr>
  <h3>Puppies</h3>
  <% @puppies.each do |puppy| %>
    <%=  puppy.name %>
  <% end %>
</div>
